# general zsh configuration

export EDITOR=vi

# helpful aliases
alias ls="ls -AFhHl --color=auto --group-directories-first"
alias g="git"
alias py="python"
alias zedit="vi ~/.zshrc && source ~/.zshrc"
alias zgedit="vi ~/.zsh_general && source ~/.zshrc"
alias zmedit="vi ~/.zsh_machine && source ~/.zshrc"
alias zkedit="vi ~/.zsh_keys && source ~/.zshrc"

# z fast directory browser
. $DEVPATH/src/github.com/rupa/z/z.sh
